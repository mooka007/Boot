<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Greeting App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1>üåü Welcome to the Greeting App! üåü</h1>
            
            <% if (typeof error !== 'undefined') { %>
                <div class="error-message">
                    ‚ö†Ô∏è <%= error %>
                </div>
            <% } %>
            
            <form action="/greet" method="POST" class="greeting-form">
                <div class="form-group">
                    <label for="name">Your Name:</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name..." required>
                </div>
                
                <div class="form-group">
                    <label>Choose your favorite emoji:</label>
                    <div class="emoji-grid">
                        <% emojis.forEach(function(emoji) { %>
                            <label class="emoji-option">
                                <input type="radio" name="emoji" value="<%= emoji %>" required>
                                <span class="emoji"><%= emoji %></span>
                            </label>
                        <% }); %>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn">Get My Greeting! üéâ</button>
            </form>
        </div>
    </div>
</body>
</html>
